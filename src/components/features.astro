import { Icon } from "astro-icon/components";

const features = [
  {
    title: "Data Strategy & Insights",
    description: "Interactive dashboards, data visualization, and decision support to help you monitor key metrics and uncover actionable insights.",
    icon: "bx:bxs-briefcase",
  },
  {
    title: "Advanced Analytics & AI",
    description: "Machine learning, predictive modeling, and AI solutions to forecast outcomes, identify risks, and automate complex processes.",
    icon: "bx:bxs-data",
  },
  {
    title: "Geospatial Intelligence",
    description: "Spatial analysis, mapping, and location-based insights using GIS and remote sensing technologies.",
    icon: "bx:bxs-map",
  },
  {
    title: "Environmental Analytics",
    description: "Biodiversity modeling, climate risk assessment, population viability analysis, and conservation planning.",
    icon: "bx:bxs-leaf",
  },
  {
    title: "Training & Enablement",
    description: "Data literacy workshops, custom training, and capability building to empower your team with data skills.",
