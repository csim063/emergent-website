---
import { Picture } from "astro:assets";
import heroImage from "@/assets/Logo_no_name.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Turning patterns into possibilities
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      We help organizations solve complex problems and make confident data-driven decisions through advanced analytics, with a specialization in geospatial and environmental challenges.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <a href="#services" class="rounded-md bg-indigo-600 px-4 py-2 text-white">
        Our Services
      </a>
      <a href="mailto:craig@emergentdata.co.nz" class="rounded-md border border-gray-300 px-4 py-2">
        Get in Touch
      </a>
    </div>
  </div>
</main>
